<!--
  pages/store/list/list.wxml
  督导所有管辖门店列表，点击进入门店详细信息页面
-->
<view class="container">
  <view class="selectMod" style="padding-top: {{statusBarHeight}}px;">
    <van-search 
      value="{{ s_name }}" 
      placeholder="输入门店名称" 
      bind:change="onChange"
      bind:search="onSearch"
    />
  </view>
  <view class="storeList" style="padding-top: {{statusBarHeight+50}}px;">
    <view class="storeItem" wx:for="{{ storeList }}" bindtap="toInfo" data-item="{{item}}">
      <view class="default">
        <image src="./../../../images/logo.jpg"></image>
        <view>
          <text class="storeName">{{item.s_name_k}}</text>
          <text class="storeAddr">{{item.s_province}}{{item.s_city}}{{item.s_district}}{{item.s_addr}}</text>
        </view>
      </view>
    </view>
  </view>
  <view class="foot" wx:if="{{showFoot}}">
    <text>到顶喽</text>
  </view>
</view>
