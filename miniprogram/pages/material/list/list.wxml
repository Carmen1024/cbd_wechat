<!--
  所有物料列表，点击进入物料详细信息页面
-->
<view class="container">
  <view class="selectMod" style="padding-top: {{menuTop}}px;">
    <image src="./../../../images/material_bg.png"></image>
    <van-search 
      model:value="{{ m_name }}" 
      placeholder="输入物料名称" 
      bind:change="onChange"
      bind:search="materialSelect"
    />
  </view>
  <view class="materialList" style="padding-top: {{menuBottom}}px;">
    <view class="materialItem" wx:for="{{ materialList }}" bindtap="toInfo" data-item="{{item}}">
      <view class="default">
        <image src="./../../../images/logo_new.jpg"></image>
        <view>
          <text class="materialName">{{item.m_name}}</text>
          <text class="materialAddr">{{item.clf_name}}</text>
        </view>
      </view>
    </view>
  </view>
  <foot wx:if="{{showFoot}}"></foot>
</view>
